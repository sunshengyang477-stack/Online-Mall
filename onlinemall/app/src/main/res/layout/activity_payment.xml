<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray_background"
    android:padding="16dp">

    <!-- 顶部返回按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/buttonBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="返回"
            android:tint="@color/colorPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="支付订单"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <!-- 支付卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 订单总金额 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单总金额"
                android:textSize="16sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/textViewTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="¥ 0.00"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="20dp"
                android:background="@color/divider_color" />

            <!-- 支付方式标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择支付方式"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- 支付二维码图片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginVertical="16dp">

                <ImageView
                    android:id="@+id/imageViewQRCode"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@color/qr_background"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_qr_code_placeholder" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="请使用支付宝扫描二维码支付"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- 支付说明 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="支付说明：\n1. 请使用支付宝扫描上方二维码完成支付\n2. 支付成功后订单将自动处理\n3. 如有问题请联系客服"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 支付完成按钮 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCompletePayment"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="支付完成"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_check"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/white" />

</LinearLayout>